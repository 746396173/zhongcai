<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>直属代理</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="__PUBLIC__/Ag/css/mui.min.css" rel="stylesheet" />
		<link rel="stylesheet" href="__PUBLIC__/Ag/css/app.css" />
		<style>
			.mui-navigate-right,h4{
				color: #FF5722;
			}
		</style>
	</head>

	<body>
		<header class="mui-bar mui-bar-nav">
		    <a href="{:U('Index/index')}" class="mui-icon mui-icon-home mui-pull-left"></a> 
		    <if condition="$canadd"><a id="menu" class="mui-icon mui-icon-plus mui-pull-right" href="{:U('Agent/addAgent')}"><span class="nav-btn">新增</span></a></if>
			<h1 class="mui-title">直属代理列表</h1>  
		</header>
		<div class="mui-content">
			<div class="mui-scroll">
			   <ul class="mui-table-view">
			   		<notempty name="list">
			            <volist name="list" id="data">
			            <li class="mui-table-view-cell">
			                <a class="mui-navigate-right" href="{:U('Agent/agentInfo',['user_id'=>$data['user_id']])}">
			                    <!--span class="mui-badge mui-badge-danger">0.02</span-->
			                    <h4>{$data['user_name']}</h4>           
			                    <p class='mui-ellipsis'>提款: {$data['apply_cash']}, 回佣: {$data['rate']} <span class="mui-pull-right">{$data['add_time']|date='Y-m-d',###}</span></p>
			                </a>	                
			            </li>
			            </volist>
			        <else/>
			            <!--当没有直属代理显示-->
			            <li class="mui-table-view-divider">
			                点击右上角  <span id="menu" class="mui-action-menu mui-icon mui-icon-plus"></span> 新增
			            </li>
			       </notempty>
			    </ul> 
			    <if condition="$pageInfo['prev'] gt 0 or $pageInfo['next'] gt 0">
			   	<ul class="mui-table-view">
			       	<li class="mui-table" style="height: 30px;padding:10px 10px 10px 10px;">
			       		<if condition="$pageInfo['prev'] gt 0">
			       		<a class="mui-pull-left" href="{:U('Agent/agentList',['page'=>$pageInfo['prev']])}">上页</a> 
			       		</if>
			       		<if condition="$pageInfo['next'] gt 0">
			       		<a class="mui-pull-right" href="{:U('Agent/agentList',['page'=>$pageInfo['next']])}">下页</a>
			       		</if>		    
			       	</li>
			    </ul>
			    </if>
		    </div>
		</div>
		<script src="__PUBLIC__/Ag/js/mui.min.js"></script> 
		<script type="text/javascript">
			mui.init();
	
		</script>
	</body>
</html>